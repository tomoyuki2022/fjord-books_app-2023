<div id="<%= dom_id book %>">
  <p>
  <strong><%= t('views.resources.title') %>:</strong>
    <%= book.title %>
  </p>

  <p>
  <strong><%= t('views.resources.memo') %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t('views.resources.author') %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t('views.resources.picture') %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
